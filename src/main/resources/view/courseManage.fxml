<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650" prefWidth="950" style="-fx-background-color: #E9B3FB;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.drivingschool.controller.CourseManageController">

    <VBox layoutX="16.8" layoutY="15.2" prefHeight="620.0" prefWidth="919.0" spacing="15"
          style="-fx-background-color: #E6E9B3FBCFA9;" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="17.0"
          AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="15.0">

        <!-- Header -->
        <Label alignment="CENTER" prefHeight="62.0" prefWidth="919.0"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #eff4fe; -fx-background-color: #9112BC; -fx-background-radius: 15;"
               text="Course Management">
            <font>
                <Font name="Lucida Sans Unicode" size="12.0"/>
            </font>
        </Label>

        <Separator prefHeight="22.0" prefWidth="919.0" style="-fx-background-color: #3b0404;"/>

        <!-- Top form with image and fields -->
        <HBox alignment="CENTER_RIGHT" prefHeight="280.0" prefWidth="919.0" spacing="20">

            <!-- Input fields -->
            <GridPane alignment="CENTER_RIGHT" hgap="15" prefHeight="280.0" prefWidth="688.0" style="-fx-padding: 10;"
                      vgap="15">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <!-- Course ID -->
                <Label text="Course ID :" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtCourseId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Course Name -->
                <Label text="Course Name :" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtCourseName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Duration -->
                <Label text="Duration :" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtDuration" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Fee -->
                <Label text="Fee (LKR) :" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="txtFee" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- Status -->
                <Label text="Status :" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="cmbStatus" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Description -->
                <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <TextArea fx:id="txtDescription" prefHeight="80.0" wrapText="true" GridPane.columnIndex="1"
                          GridPane.rowIndex="5"/>

                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints prefHeight="80.0"/>
                </rowConstraints>
            </GridPane>
        </HBox>

        <!-- Action buttons -->
        <HBox alignment="CENTER" prefHeight="61.0" prefWidth="919.0" spacing="15">

            <Button fx:id="btnSave" onAction="#handleSaveCourse" prefHeight="38.0" prefWidth="120.0"
                    style="-fx-background-color: #5D2F77; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"
                    text="Save">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>

            <Button onAction="#handleClear" prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #5D2F77; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"
                    text="Clear"/>

            <Button fx:id="btnUpdate" onAction="#handleUpdateCourse" prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #5D2F77; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"
                    text="Update"/>

            <Button onAction="#handleDeleteCourse" prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #5D2F77; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"
                    text="Delete"/>

            <Button onAction="#handleSearchCourse" prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #6A4C93; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15;"
                    text="Search"/>
        </HBox>

        <!-- Table -->
        <TableView fx:id="tblCourse" onMouseClicked="#onTableClick" prefHeight="200.0" prefWidth="930.0"
                   style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 8;"
                   VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCourseId" prefWidth="80" text="Course ID"/>
                <TableColumn fx:id="colCourseName" prefWidth="150" text="Course Name"/>
                <TableColumn fx:id="colDuration" prefWidth="100" text="Duration"/>
                <TableColumn fx:id="colFee" prefWidth="100" text="Fee (LKR)"/>
                <TableColumn fx:id="colStatus" prefWidth="80" text="Status"/>
                <TableColumn fx:id="colDescription" prefWidth="200" text="Description"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
